<div class="container">
  <div class="row">
    <%= form_for @application, html: { multipart: true } do |f| %>
        <div class="col-md-6 col-md-offset-3">
          <h2>Apply to become a checked user</h2>
          <div class="field">
            <%= f.label "name" %><br />
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label "surname" %><br />
            <%= f.text_field :surname, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label "image" %><br>
            <%= f.file_field :passport_image, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label "birthday" %><br />
            <%= f.date_field :birthday, class: 'form-control', max: Date.today %>
          </div>
          <div class="field">
            <%= f.label "comment" %><br />
            <%= f.text_area :comment, class: 'form-control' %>
          </div>
          <%= f.submit "Apply", class: 'btn btn-success btn-block' %>
        </div>
    <% end %>
  </div>
</div>