<h2>Edit news item</h2>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= form_for @news_item do |f| %>
          <div class="field">
            <%= f.label "text" %><br />
            <%= f.text_area :text, class: 'form-control' %>
          </div>
          <br />
          <%= f.submit "Update", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>