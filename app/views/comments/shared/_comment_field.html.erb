<% unless current_user.nil? %>
    <%= form_for [@commentable, @commentable.comments.build] do |f| %>
        <% #render '/comments/shared/error_messages' %>

        <div class="field">
          <%= f.label "text" %><br />
          <%= f.text_area :text, class: 'form-control' %>
        </div>
        <br />
        <%= f.submit "Comment", class: 'btn btn-default btn-block' %>
    <% end %>
<% end %>