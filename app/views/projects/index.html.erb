<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="content-grid mdl-grid">
        <% @projects.each do |project| %>
          <div class="mdl-card mdl-cell mdl-cell--4-col mdl-shadow--16dp project-cell">
            <%= link_to project do %>
              <%= image_tag project.pic_link, style: 'max-width: 100%' %>
            <% end %>
            <h3 align="center"><%= link_to project.name, project, style: 'text-decoration:none;' %></h3>
            <% if !current_user.nil? && project.user_id == current_user.id %>
              <%= link_to 'Edit', edit_project_path(project) %>
              <%= link_to 'Delete', project, method: :delete %>
            <% end %>
            Author's id: <%= project.user_id %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>