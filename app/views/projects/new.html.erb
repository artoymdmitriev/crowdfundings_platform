<div class="container">
  <div class="row">
      <%= form_for @project do |f| %>
        <div class="col-md-6 col-md-offset-3">
          <h2>Create new project</h2>
          <%= render '/projects/shared/error_messages' %>

          <div class="field">
            <%= f.label "name" %>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label "description" %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label "pic_link" %>
            <%= f.file_field :pic_link, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label "fundings_deadline" %>
            <%= f.date_field :fundings_deadline, class: 'form-control', min: Date.today %>
          </div>
          <div class="field">
            <%= f.label "goal" %><br />
            <%= f.number_field :goal, step: 0.1, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label "min_payment" %><br />
            <%= f.number_field :min_payment, step: 0.1, class: 'form-control', min: 1 %>
          </div>
          <div class="field">
            <%= f.label "max_payment" %><br />
            <%= f.number_field :max_payment, step: 0.1, class: 'form-control', min: 1 %>
          </div>
          <div class="field">
            <%= f.label "tags" %><br />
            <%= f.text_field :tag_list, value: f.object.tag_list.to_s,
                             placeholder: 'car, flower, tower', class: 'form-control' %>
          </div>
          <br />
          <%= f.submit "Create", class: 'btn btn-success btn-block' %>
        </div>
      <% end %>
  </div>
</div>