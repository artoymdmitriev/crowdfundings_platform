<div class="container">
  <div class="row">
    <div class="col-md-9">
      Project by <%= user_name_and_surname @project %>
      <% @project.user.badges.each do |badge| %>
          <%= image_tag badge.custom_fields[:image], title: badge.description, alt: badge.description %>
      <% end %>
      <h1><%= @project.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <img src="<%= @project.pic_link %>" alt="Placeholder" style="max-width: 100%">
    </div>
    <div class="col-md-3">
      <div class="project-properties">
        <i class="glyphicon glyphicon-time"></i>
        <%= @project.fundings_deadline %>
      </div>
      <div class="project-properties">
        <i class="fa fa-money"></i>
        <%= @project.earned %>$
      </div>
      <div class="project-properties-small">
        pledged of <%= @project.goal %>$ goal
      </div>
      <div class="project-properties">
        Failed
      </div>
      <div class="donate">
        <%= link_to 'Donate', new_project_payment_path(@project), class: 'btn btn-default' %>
      </div>

      <% unless current_user.nil? || current_user.id != @project.user_id %>
          <div class="admin_tools">
            <%= link_to 'Add news item', new_project_news_item_path(@project), class: 'btn btn-default' %>
            <%= link_to 'Edit project', edit_project_path(@project), class: 'btn btn-default' %>
            <%= link_to 'Delete', @project, method: :delete, class: 'btn btn-default' %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h2>About this project</h2>
      <div class="description">
        <%= kramdown @project.description %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <h2>Comments</h2>
      <div class="comments">
        <%= render @project.comments %>
        <%= render '/comments/shared/comment_field' %>
      </div>
    </div>
  </div>
</div>
